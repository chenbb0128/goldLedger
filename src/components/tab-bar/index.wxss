.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 999;
}

.tab-bar-bg {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 110rpx;
  background: #1A1A1A;
  box-shadow: 0 -2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  height: 110rpx;
}

.icon-wrapper {
  position: relative;
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 4rpx;
}

.tab-bar-icon {
  width: 100%;
  height: 100%;
}

.tab-bar-text {
  font-size: 20rpx;
  line-height: 1.2;
}

.center-item {
  position: relative;
  top: -30rpx;
}

.center-icon {
  width: 96rpx;
  height: 96rpx;
  background: #FFD700;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.center-icon .tab-bar-icon {
  width: 48rpx;
  height: 48rpx;
} 