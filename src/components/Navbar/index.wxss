.nav-bar {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}

.nav-content {
  display: flex;
  align-items: center;
  padding: 0 32rpx;
}

.title-container {
  flex: 1;
  text-align: center;
}

.title {
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 500;
}

.search-container {
  flex: 1;
  padding: 0 32rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 32rpx;
  padding: 12rpx 24rpx;
}

.search-input {
  flex: 1;
  margin-left: 16rpx;
  color: #ffffff;
  font-size: 28rpx;
}

.placeholder {
  color: rgba(255, 255, 255, 0.5);
} 