.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 96rpx;
  background: #1A1A1A;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1rpx;
  background: rgba(255, 255, 255, 0.1);
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
}

.tab-bar-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.tab-bar-bg {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 120rpx;
  background: #1A1A1A;
  box-shadow: 0 -1px 2px rgba(0, 0, 0, 0.1);
}

.tab-bar-text {
  font-size: 20rpx;
  font-weight: 400;
}

/* 中间的添加按钮样式 */
.center-item {
  position: relative;
  top: -32rpx;
}

.center-icon {
  width: 96rpx;
  height: 96rpx;
  background: #F59E0B;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.center-icon .tab-bar-icon {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 0;
} 